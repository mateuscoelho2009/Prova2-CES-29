package Q2.Q2;

import java.util.Scanner;

import junit.framework.TestCase;

public class VulnerabilityTest extends TestCase {
	static VulnerableClass vc = new VulnerableClass();
	
	public static void testClosingScanner()
    {
        vc.vulnerableMethod ("teste.txt");
        boolean error = false;
        
        try {
        	Scanner c;
        	String opr= c.nextLine();
        } catch (Exception e) {
        	error = true;
        }
        
        assertTrue(error);
    }
}
